@model Student;
@{
    ViewData["Title"] = "บันทึกข้อมูล";
}

<h1 class="text-center">บันทึกคะแนน</h1>
<form method="post" asp-controller="Student" asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Score"></label>
        <input type="number" asp-for="Score" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary my-4">บันทึก</button>
</form>

